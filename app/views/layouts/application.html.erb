<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= @title %></title>
    <%= javascript_include_tag 'jquery-1.4.4.min', 'jquery-ui-1.8.7.custom.min', 'application', :cache => true %>
    <%= stylesheet_link_tag 'jquery-ui-1.8.7.custom', :media => 'screen' %>
    <%= stylesheet_link_tag "site" %>
  </head>
  <body>
    <div id="whole_page">
      <div id="header">PG MoneyTracker</div>
      <div id="nav">
        <span style="float: right">
          <% if logged_in? -%>
            <%= nav_link "Transactions", "item", "index" %> |
            <%= nav_link "Profile", "user", "index" %> |
            <%= nav_link "Logout", "user", "logout" %>
          <% else -%>
            <%= nav_link "Register", "user", "register" %> |
            <%= nav_link "Login",    "user", "login" %>
          <% end -%>
        </span>
        <%= nav_link "Home",     "site" if logged_in?%>
      </div>
      <div id="content">
        <% if flash[:notice] -%>
           <div id="notice"><%= flash[:notice] %></div>
        <% end -%>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
